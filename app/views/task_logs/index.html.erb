<p id="notice"><%= notice %></p>

<h1>Task Logs</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Acceptor</th>
      <th>Task title</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_logs.each do |task_log| %>
      <tr>
        <td><%= task_log.sender %></td>
        <td><%= task_log.acceptor %></td>
        <td><%= task_log.task_title %></td>
        <td><%= task_log.start_time %></td>
        <td><%= task_log.end_time %></td>
        <td><%= task_log.status %></td>
        <td><%= link_to 'Show', task_log %></td>
        <td><%= link_to 'Edit', edit_task_log_path(task_log) %></td>
        <td><%= link_to 'Destroy', task_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

