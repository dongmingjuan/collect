
<%= simple_form_for(@picture, url: article_picture_path(id: params[:id]), html: { multipart: true, class: "form-horizontal" }) do |f| %>
  <img src="<%= picture.image.url('40') %>">
  <%= f.input :image, label: "图片" %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
  <div class="col-sm-10 col-sm-offset-2">
    <%= f.button :submit, "提 交", class: "btn btn-primary" %>
    <%= link_to "返 回", article_path(Article.find(params[:article_id])), class: "btn btn-default" %>
  </div>
<% end %>