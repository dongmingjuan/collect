<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :article_title %>
  </div>
  <div class="field">
    <%= form.label "标签" %>
    <input type="text" name="label" >
  </div>
  <div class="field">
     <%= form.label "选择标签" %>
    <% @labels.each_with_index do |label, index| %>
      <input id="" name="checked_labels[<%= index %>]" type="checkbox" value="<%= label[1] %>" <%= article.labels.find(label[1]).nil? ? '' : 'checked' %> />
      <label for="pet_dog"><%= label[0] %></label>
    <% end %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :article_content %>
  </div>

  <div class="field">
    <%= form.label :from %>
    <%= form.text_field :from, id: :article_from %>
  </div>

  <div class="field">
    <%= form.label :view_count %>
    <%= form.number_field :view_count, id: :article_view_count %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
