<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>From</th>
      <th>view_count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.from %></td>
        <td><%= article.view_count %></td>
        <td><%= link_to 'Show', article %></td>
        <td><a href="/articles/<%= article.id %>/edit">编辑</a>  <%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @articles %>共 <%= @articles.count %> 条记录
<br>

<%= link_to 'New Article', new_article_path %>
