<div class="panel panel-default">
 <form action="/articles" method="get">
      <div class="input-group col-md-3" style="margin-top:15px ">
        <input type="text" class="form-control" placeholder="请输入关键字" id='search' name="search" value="<%= params[:search]%>"/ >
          <span class="input-group-btn">
            <input class="btn btn-info btn-search" type="submit" name="" value="搜索">
          </span>
      </div>
    </form>
  <div class="panel-heading">
    文章列表
    <% if can? :create, Article %>
    <div class="pull-right">
      <%= link_to "新建文章", new_article_path, class: "btn btn-primary btn-xs" %>
    </div>
    <% end %>
  </div>
  <div class="table-responsive">
    <table class="table table-striped b-t b-light">
      <thead>
        <tr>
          <th>采集者</th>
          <th>标题</th>
          <th>标签</th>
          <th>来源公众号</th>
          <th>来源链接</th>
          <th>点击次数&nbsp;
            <a href="/articles/ascending">
              <span class="glyphicon glyphicon-arrow-up" aria-hidden="true">
              </a>
              <a href="/articles/descending">
                <span class="glyphicon glyphicon-arrow-down" aria-hidden="true">
                </a>
              </button>
            </th>
            <th style="width:120px;">创建时间</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <%= render(@articles) %>
        </tbody>
      </table>
    </div>
    <footer class="panel-footer">
      <%#= paginate @users, views_prefix: 'admin',theme: 'angulr' %>
      <%= render partial: "shared/admin/paginate", locals: { object: @articles } %>
    </footer>
  </div>

