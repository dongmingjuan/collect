<tr>
  <td><%= bannar.title %></td>
  <td><%= bannar.url %></td>
  <td><img src="<%= bannar.image_url %>" alt="" /></td>
  <td><%= time_f(bannar.created_at) %></td>
  <td>
    <%= link_to "修改", edit_admin_bannar_path(bannar), class: "btn btn-default btn-xs" %>
    <%= link_to "删除", admin_bannar_path(bannar), method: :delete, class: "btn btn-default btn-xs" %>
    <%= link_to_if bannar.previous_item, "上", up_admin_bannar_path(bannar), method: :post, class: "btn btn-default btn-xs" %>
    <%= link_to_if bannar.next_item, "下", down_admin_bannar_path(bannar), method: :post, class: "btn btn-default btn-xs" %>
  </td>
</tr>
