<%= simple_form_for(@user, html: { multipart: true, class: "form-horizontal" }) do |f| %>
<%= f.input :email, label: "用户邮箱" %>
<div class="line line-dashed b-b line-lg pull-in"></div>
<% if @user.avatar_url  %>
<div class="form-group email optional">
  <label class="col-sm-2 control-label email optional" >用户头像</label>
  <div class="col-sm-10 ">
    <%= image_tag @user.avatar_url('40'), class: "img-thumbnail" %>
  </div>
</div>
<% end %>
<%#= f.input :active, as: :boolean, html: true,  label: "活动宣传图片" %>
<div class="line line-dashed b-b line-lg pull-in"></div>
<div class="col-sm-10 col-sm-offset-2">
  <%= f.button :submit, "提 交", class: "btn btn-primary" %>
  <%= link_to "返 回", users_path, class: "btn btn-default" %>
</div>
<% end %>
