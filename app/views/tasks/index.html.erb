<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Addr</th>
      <th>Boss name</th>
      <th>Mobile</th>
      <th>Environment</th>
      <th>Activity decription</th>
      <th>Status</th>
      <th>Brand</th>
      <th>Deadline</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.addr %></td>
        <td><%= task.boss_name %></td>
        <td><%= task.mobile %></td>
        <td><%= task.environment %></td>
        <td><%= task.activity_decription %></td>
        <td><%= task.status %></td>
        <td><%= task.brand %></td>
        <td><%= task.deadline %></td>
        <td><%= task.end_time %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
